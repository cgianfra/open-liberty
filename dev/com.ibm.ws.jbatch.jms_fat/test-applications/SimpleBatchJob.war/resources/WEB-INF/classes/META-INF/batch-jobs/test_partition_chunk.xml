<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
	id="test_partition_chunk" version="1.0">

	<step id="step1" next="step2">
		<batchlet ref="sleepyBatchlet">
			<properties>
				<property name="sleep.time.seconds"
					value="#{jobParameters['sleep.time.seconds']}?:1;" />
			</properties>
		</batchlet>
	</step>

	<step id="step2">
		<chunk item-count="3">
			<reader ref="com.ibm.jbatch.tck.artifacts.reusable.SimpleIntegerCounterReader" />
			<processor
				ref="com.ibm.jbatch.tck.artifacts.reusable.DelayingProcessor">
				<properties >
					<property name="delay" value="#{jobParameters['step1.delay']}?:1;"/>
				</properties>
			</processor>
			<writer ref="com.ibm.jbatch.tck.artifacts.reusable.NoOpWriter" />
		</chunk>
		<partition>
			<plan partitions="#{jobParameters['numPartitions']}?:4;"/>
		</partition>
	</step>
</job>
